<%- include("../partials/header") %>
<div class="container">
    <div class="row">
      <div class="col">
        <h1 class="mt-5">Cadastrar Professor</h1>
        <form class="mt-4" action="/professores/cadastrarProfessor" method="POST">
          <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome"  placeholder="ex: Marcio" required>
          </div>
          <div class="form-group">
            <label for="idade">Idade</label>
            <input type="Number"  class="form-control" id="idade" name="idade"  placeholder="ex: 34" required>
          </div>
          <div class="form-group">
            <label for="materia">Materia</label>
            <input type="text"  class="form-control" id="materia" name="materia"  placeholder="ex: geografia" required>
          </div>
          <div class="form-group">
            <label for="gostaDe">Materia</label>
            <input type="text"  class="form-control" id="gostaDe" name="gostaDe"  placeholder="ex: futebol" required>
          </div>
          <button type="submit" class="btn btn-primary">Salvar</button>
        </form>    
      </div>
    </div>
  </div>
